# ============================================
# SCALEKIT CONFIGURATION
# ============================================
# Get these values from: https://app.scalekit.com
# Navigate to: Settings → API Keys

# Your Scalekit environment URL (e.g., https://yourenv-abc123.scalekit.dev)
SCALEKIT_ENVIRONMENT_URL=https://your-environment.scalekit.dev

# Your Scalekit Client ID
SCALEKIT_CLIENT_ID=your_client_id_here

# Your Scalekit Client Secret (keep this secure!)
SCALEKIT_CLIENT_SECRET=your_client_secret_here

# ============================================
# SERVER CONFIGURATION
# ============================================

# Port for the Express server
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Your backend server URL
SERVER_URL=http://localhost:3001

# Your frontend client URL (for CORS)
CLIENT_URL=http://localhost:3000

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these values from: https://app.supabase.com
# Navigate to: Project Settings → API

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase service role key (SECRET - for server-side only)
# WARNING: Never expose this key in frontend code!
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================
# JWT CONFIGURATION
# ============================================

# Secret key for signing JWT tokens (minimum 32 characters)
# Generate a random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_random_string_minimum_32_characters_here

# JWT token expiration (e.g., 1h, 24h, 7d)
JWT_EXPIRES_IN=24h

# ============================================
# OPTIONAL: ADDITIONAL CONFIGURATION
# ============================================

# Database connection (if using direct PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis for session storage (if needed)
# REDIS_URL=redis://localhost:6379

# Email configuration (if using custom email provider)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Logging level (error, warn, info, debug)
LOG_LEVEL=info